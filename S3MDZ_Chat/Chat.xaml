<Window x:Class="S3MDZ_Chat.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S3MDZ_Chat"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <Grid>
        <TextBlock Name="chatBlockMain" HorizontalAlignment="Left" Margin="23,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="312" Width="605"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="669,375,0,0" VerticalAlignment="Top" Width="75" Click="Button_Send"/>
        <Button Content="End Connection" HorizontalAlignment="Left" Margin="669,23,0,0" VerticalAlignment="Top" Width="95" Click="Button_EndConnection"/>
        <TextBox Name="textBoxUserInput" HorizontalAlignment="Left" Height="23" Margin="23,372,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="605"/>

    </Grid>
</Window>
